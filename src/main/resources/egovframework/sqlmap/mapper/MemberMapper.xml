<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="egovframework.mumukgang.cmmn.web.mapper.MemberMapper">
    <select id="UserIdCheck" resultType="int">
            SELECT COUNT(*) from user where email=#{email}
    </select>

	<insert id="UserJoin" parameterType="hashmap">
			INSERT INTO user VALUES(#{email}, #{password}, #{nickname}, #{comp_name})
	</insert>
	
	<select id="loginCheck" parameterType="hashmap" resultType="int">
		SELECT COUNT(*) FROM user WHERE email=#{email} and password=#{password}
	</select>
	
	<select id="userInfo" parameterType="hashmap" resultType="hashmap">
	
	</select>
	
	<select id="findfriendsemail" parameterType="hashmap" resultType="Hashmap">
		SELECT email, nickname FROM user WHERE email=#{email}
	</select>
	
	<select id="findfriendsnickname" parameterType="hashmap" resultType="Hashmap">
		SELECT email, nickname FROM user WHERE nickname=#{nickname}
	</select>

	<select id="friendslist" parameterType="hashmap" resultType="egovMap">
		SELECT friend_email FROM friends_list WHERE email=#{email}
	</select>
	
	<insert id="requestfriends" parameterType="hashmap">
		INSERT INTO friends_request VALUES(#{req_email}, #{res_email}, #{request_time})
	</insert>

	<select id="receivedfriendrequest" parameterType="hashmap" resultType="hashmap">
		SELECT req_email FROM friends_request WHERE res_email=#{res_email}
	</select>
	
</mapper>